extends layout

block content
	div(class="container-fluid")
		div#movieCarousel(class="carousel slide", data-keyboard="true", data-ride="carousel", data-interval="9000")
			div(class="carousel-inner row w-100 mx-auto", role="listbox")
				each movie, index in movies
					div(class="carousel-item col-md-2 col-sm-6")
						a(data-fancybox data-src="#"+index href="javascript:;")
							div(id=index, style="display:none;width:100%;height:100%")
								div(class="videotitle")= movie.title
								video(controls title=movie.title poster=movie.images)
									source(src=movie.contents)
							img(class="img-fluid mx-auto d-block", src=movie.images)
							p(class="title")= movie.title
			a(class="carousel-control-prev", href="#movieCarousel", role="button", data-slide="prev")
				span(class="carousel-control-prev-icon", aria-hidden="true")
				span(class="sr-only") Previous
			a(class="carousel-control-next", href="#movieCarousel", role="button", data-slide="next")
				span(class="carousel-control-next-icon", aria-hidden="true")
				span(class="sr-only") Next
		div#history(class="history-div")
		div#historyCarouselContainer
			div#historyCarousel(class="carousel slide", data-keyboard="true", data-ride="carousel", data-interval="9000")
				div#historyCarouselInner(class="carousel-inner row w-100 mx-auto", role="listbox")
				a(class="carousel-control-prev", href="#historyCarousel", role="button", data-slide="prev")
					span(class="carousel-control-prev-icon", aria-hidden="true")
					span(class="sr-only") Previous
				a(class="carousel-control-next", href="#historyCarousel", role="button", data-slide="next")
					span(class="carousel-control-next-icon", aria-hidden="true")
					span(class="sr-only") Next

	script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
	script(src="//cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js", integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb", crossorigin="anonymous")
	script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js", integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn", crossorigin="anonymous")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.1.20/jquery.fancybox.min.js")
	script(src="/scripts/main.js")